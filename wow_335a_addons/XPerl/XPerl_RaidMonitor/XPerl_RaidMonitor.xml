						<Offset><AbsDimension x="0" y="-2"/></Offset>
					</Anchor>
					<Anchor point="BOTTOMRIGHT">
						<Offset><AbsDimension x="-4" y="4"/></Offset>
					</Anchor>
				</Anchors>
				<Frames>
					<StatusBar name="$parentHighMana" inherits="XPerl_RaidMonitor_StatusBarTemplate">
						<Anchors>
							<Anchor point="TOPLEFT">
