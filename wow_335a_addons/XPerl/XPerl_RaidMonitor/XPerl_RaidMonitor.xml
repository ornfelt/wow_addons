								<FontString inherits="GameFontNormalSmall" text="XPERL_RAID_MONITOR_STATS_HIGH_MANA" justifyH="RIGHT">
									<Size><AbsDimension x="90" y="10"/></Size>
									<Anchors>
										<Anchor point="RIGHT" relativePoint="LEFT">
											<Offset><AbsDimension x="-2" y="0"/></Offset>
